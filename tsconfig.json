{
  "compilerOptions": {
    "outDir": "./dist",
    "esModuleInterop": true,
    "lib": ["es2020"],
    "module": "es2022",
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2022",
    "types": ["node"],
    "allowJs": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
